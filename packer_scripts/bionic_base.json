{
  "variables": {
    "gcloud_access_json_key": "{{env `PACKER_GCLOUD_SERVICE_ACCOUNT`}}",
    "packer_test_flask_app": "{{env `FLASK_APP_DIRECTORY`}}"
  },
  "builders": [
    {
      "type": "googlecompute",
      "disk_size": 10,
      "image_name": "bionic_beaver_flask",
      "image_description": "Ubuntu image with Flask Hello World Application",
      "account_file": "{{user `gcloud_access_json_key`}}",
      "project_id": "assessment-demo-andela",
      "source_image": "ubuntu-1804-bionic-v20190212a",
      "image_family": "ubuntu-1804-lts",
      "ssh_username": "dominic",
      "zone": "europe-west2-a",
      "region": "europe-west2",
      "machine_type": "n1-standard-1"
    }
  ],
  "provisioners": [
    {
      "type": "shell-local",
      "command": "mkdir app"
    },

    {
      "type": "file",
      "source": "{{user `packer_test_flask_app`}}",
      "destination": "/app",
      "direction": "upload"
    },

    {
      "type": "shell",
      "inline": ["sudo chmod +x ../app/start.sh && ./../app/start.sh"]
    }
  ]
}
